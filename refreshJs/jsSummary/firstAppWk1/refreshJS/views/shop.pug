extends layout
main-layout.pug 

block styles 
    link(rel="stylesheet", href="/css/product.css")


block content 
    main
        if products.length > 0
                .grid 
                    each product in prods
                        article.card.product-item
                            header.card__header 
                                h1.product__title #(product.title) 
                            div.card__image 
                                img(src="", alt="")
                            .card__content 
                                h2.product__price $50.00
                                p.product__description Great stuff
                            .card__actions 
                                button.btn Add to Cart
            else 
                h1 No products 
        
          

            button.btn(type="submit") Add Product

